{
  "extends": [
    "next/core-web-vitals"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "react/no-unescaped-entities": 0,
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": "import",
        "next": "import"
      },
      {
        "blankLine": "any",
        "prev": [
          "const",
          "let"
        ],
        "next": "*"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/jsx-closing-bracket-location": [
      "error",
      "line-aligned"
    ],
    "indent": [
      "error",
      2
    ],
    "react/jsx-indent-props": [
      "error",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "array-element-newline": [
      "error",
      "always"
    ],
    "array-bracket-newline": [
      "error",
      {
        "minItems": 2
      }
    ]
  }
}